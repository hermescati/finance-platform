<UserControl
    x:Class="Expensier.WPF.Controls.Modals.TransactionModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    BorderThickness="0"
    mc:Ignorable="d">

    <Grid>
        <Rectangle
            Fill="Black"
            MouseDown="Rectangle_MouseDown"
            Opacity=".75" />

        <Border
            Width="360"
            Height="464"
            Padding="24"
            Background="{StaticResource PrimaryColor}"
            BorderBrush="{StaticResource InactiveColor}"
            BorderThickness=".5"
            CornerRadius="16">

            <Border.Effect>
                <DropShadowEffect Opacity="0.5" ShadowDepth="3" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="32" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--#region Header-->
                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource Header2}"
                    Text="Add new expense" />
                <!--#endregion-->

                <!--#region Form-->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Name  -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Content="Expense name"
                            Style="{StaticResource FormLabel}" />

                        <TextBox
                            Grid.Row="2"
                            Width="311"
                            Text="{Binding TransactionName}" />
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Amount  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Content="Amount"
                                Style="{StaticResource FormLabel}" />

                            <TextBox
                                Grid.Row="2"
                                Width="146.5"
                                Text="{Binding Amount, StringFormat='c'}" />
                        </Grid>

                        <!--  Category  -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Content="Category"
                                Style="{StaticResource FormLabel}" />

                            <ComboBox
                                Grid.Row="2"
                                Height="52"
                                VerticalAlignment="Stretch"
                                ItemsSource="{Binding TransactionType}"
                                SelectedItem="{Binding Category}">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Template" Value="{StaticResource ComboBoxTemplate}" />
                                        <Setter Property="ItemContainerStyle" Value="{StaticResource DropDownItemsTemplate}" />
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                        </Grid>
                    </Grid>

                    <!--  Date Picker  -->
                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Content="Date"
                            Style="{StaticResource FormLabel}" />

                        <DatePicker Grid.Row="2" SelectedDate="{Binding ProcessDate}" />
                    </Grid>
                </Grid>
                <!--#endregion-->

                <!--#region CTAs-->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Cancel  -->
                    <Button
                        Grid.Column="0"
                        Width="140"
                        Height="48"
                        Background="{StaticResource PrimaryColor}"
                        Click="Button_Click"
                        Content="Cancel"
                        Foreground="{StaticResource InactiveColor}"
                        Style="{StaticResource BaseButton}" />

                    <!--  Add  -->
                    <Button
                        Grid.Column="2"
                        Width="140"
                        Height="48"
                        Command="{Binding AddNewTransaction}"
                        Content="Add"
                        Style="{StaticResource BaseButton}" />
                </Grid>
                <!--#endregion-->
            </Grid>
        </Border>
    </Grid>
</UserControl>
