<UserControl
    x:Class="Expensier.WPF.Controls.Modals.CryptoModal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Controls.Modals"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    BorderThickness="0"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <Rectangle
            Fill="Black"
            MouseDown="Rectangle_MouseDown"
            Opacity=".75" />

        <Border
            Width="364"
            Height="466"
            Padding="30"
            Background="{StaticResource PrimaryColor}"
            BorderBrush="{StaticResource InactiveColor}"
            BorderThickness=".5"
            CornerRadius="20">

            <Border.Effect>
                <DropShadowEffect Opacity="0.8" ShadowDepth="3" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="32" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="32" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Content="Add New Asset"
                    Style="{StaticResource Header_20px}" />

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="16" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <Label Content="Crypto Symbol" Style="{StaticResource Subheader_16px}" />
                        <Grid>
                            <TextBox
                                Width="296"
                                Height="45"
                                Margin="0,4,0,0"
                                Text="{Binding CryptoSymbol}" />
                            <Button
                                Width="80"
                                Height="35"
                                Margin="0,8,8,4"
                                HorizontalAlignment="Right"
                                Command="{Binding SearchSymbolCommand}"
                                Content="Search"
                                Style="{StaticResource ModalButton}" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <Label Content="Coins" Style="{StaticResource Subheader_16px}" />
                        <TextBox
                            Width="300"
                            Height="45"
                            Margin="0,4,0,0"
                            IsEnabled="{Binding ValidSymbol}"
                            Text="{Binding Coins}" />
                    </StackPanel>

                    <StackPanel Grid.Row="4">
                        <Label Content="Purchase price" Style="{StaticResource Subheader_16px}" />
                        <TextBox
                            Width="300"
                            Height="45"
                            Margin="0,4,0,0"
                            IsEnabled="{Binding ValidSymbol}"
                            Text="{Binding PurchasePrice, StringFormat='c'}" />
                    </StackPanel>

                    <TextBlock
                        Grid.Row="6"
                        Width="296"
                        DataContext="{Binding ErrorMessageViewModel}"
                        Foreground="{StaticResource AccentColor}"
                        Text="{Binding Message}"
                        TextWrapping="Wrap"
                        Visibility="{Binding HasMessage, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Width="138"
                        Height="40"
                        Click="Button_Click"
                        Content="Cancel"
                        Style="{StaticResource CancelButton}" />

                    <Button
                        Grid.Column="2"
                        Width="138"
                        Height="40"
                        Command="{Binding AddCryptoCommand}"
                        Content="Add"
                        Style="{StaticResource Button}" />
                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
