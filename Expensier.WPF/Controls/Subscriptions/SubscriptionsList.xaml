<UserControl
    x:Class="Expensier.WPF.Controls.Subscriptions.SubscriptionsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="340"
    d:DesignWidth="381"
    mc:Ignorable="d">


    <UserControl.Resources>
        <Style x:Key="SubscriptionsViewItem" TargetType="{x:Type ListViewItem}">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="UseLayoutRounding" Value="True" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border
                            x:Name="Border"
                            Padding="0,16,0,16"
                            CornerRadius="12">
                            <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                UseLayoutRounding="{TemplateBinding UseLayoutRounding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4D000000" />
                            </Trigger>
                            <EventTrigger RoutedEvent="Border.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetName="Border"
                                            Storyboard.TargetProperty="Padding"
                                            From="0, 16, 0, 16"
                                            To="24, 16, 24, 16"
                                            Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Border.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetName="Border"
                                            Storyboard.TargetProperty="Padding"
                                            From="24, 16, 24, 16"
                                            To="0, 16, 0, 16"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <Grid>
        <ListView
            x:Name="ListView"
            Height="332"
            VerticalContentAlignment="Top"
            Background="{DynamicResource PrimaryColor}"
            BorderThickness="0"
            ItemContainerStyle="{DynamicResource SubscriptionsViewItem}"
            ItemsSource="{Binding Subscriptions}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" MaxWidth="299">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    Grid.Column="0"
                                    Width="33"
                                    Height="33"
                                    Source="{DynamicResource DebitTransactionIcon}" />

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock
                                        Width="120"
                                        Style="{DynamicResource Subscription_Data_15px}"
                                        Text="{Binding SubscriptionPlan}" />
                                    <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                                        <TextBlock Style="{DynamicResource Subscription_Date_12px}" Text="{Binding DueDate, StringFormat='{}{0:MMM dd}'}" />
                                        <Ellipse
                                            Width="4"
                                            Height="4"
                                            Margin="6,0,6,0"
                                            Fill="{DynamicResource InactiveColor}" />
                                        <TextBlock Style="{DynamicResource Subscription_Date_12px}" Text="{Binding DueDate, StringFormat='{}{0:yyyy}'}" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <TextBlock
                                Grid.Column="2"
                                Width="54"
                                VerticalAlignment="Center"
                                Style="{DynamicResource Subscription_Amount_13px}"
                                Text="{Binding Amount, StringFormat='c'}" />
                        </Grid>

                        <Button
                            Grid.Column="2"
                            Command="{Binding DeleteCommand}"
                            Style="{DynamicResource EditButton}"
                            Tag="{DynamicResource DeleteIcon}" />

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
