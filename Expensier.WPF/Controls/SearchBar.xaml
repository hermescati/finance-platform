<UserControl
    x:Class="Expensier.WPF.Controls.SearchBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="32"
    d:DesignWidth="190"
    mc:Ignorable="d">

    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Style x:Key="SearchBarTemplate" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource MenuButtonColor}" />
            <Setter Property="Foreground" Value="{DynamicResource TransparentColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SecondaryColor}" />
            <Setter Property="Width" Value="190" />
            <Setter Property="Height" Value="32" />
            <Setter Property="FontFamily" Value="SF Pro Display" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="UseLayoutRounding" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="GlowEffect"
                            Width="198"
                            Height="40"
                            Margin="-4"
                            CornerRadius="10">
                            <Border
                                x:Name="Border"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource MenuButtonColor}"
                                BorderThickness="1.5"
                                CornerRadius="8"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="16" />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        x:Name="Icon"
                                        Grid.Column="1"
                                        Width="16"
                                        Height="16"
                                        Source="{DynamicResource SearchIcon}" />
                                    <TextBlock
                                        x:Name="Placeholder"
                                        Grid.Column="3"
                                        Padding="0"
                                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                        FontFamily="{TemplateBinding FontFamily}"
                                        FontSize="{TemplateBinding FontSize}"
                                        FontWeight="{TemplateBinding FontWeight}"
                                        Foreground="{TemplateBinding Foreground}"
                                        Text="Search expenses history..."
                                        Visibility="Collapsed" />
                                    <ScrollViewer
                                        x:Name="PART_ContentHost"
                                        Grid.Column="3"
                                        Padding="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Focusable="false"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden" />
                                </Grid>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource SecondaryColor}" />
                                <Setter TargetName="Icon" Property="Image.Source" Value="{DynamicResource SearchSelectedIcon}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Icon" Property="Image.Source" Value="{DynamicResource SearchSelectedIcon}" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource SecondaryColor}" />
                                <Setter TargetName="GlowEffect" Property="BorderThickness" Value="4" />
                                <Setter TargetName="GlowEffect" Property="BorderBrush" Value="{DynamicResource SecondaryGlowColor}" />
                                <Setter Property="Foreground" Value="{DynamicResource SecondaryColor}" />
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TextBox
            x:Name="searchBar"
            Width="190"
            Height="32"
            Style="{DynamicResource SearchBarTemplate}"
            TextChanged="SeachBar_PasswordChanged" />
    </Grid>
</UserControl>
