    <!--#region Cryptos-->
    <Style x:Key="Crypto_Symbol_14px" TargetType="TextBlock">
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontFamily" Value="SF Pro Display" />
        <Setter Property="FontSize" Value="14" />
