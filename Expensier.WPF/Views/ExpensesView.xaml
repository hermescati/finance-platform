<UserControl
    x:Class="Expensier.WPF.Views.ExpensesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:charts="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:controls="clr-namespace:Expensier.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modals="clr-namespace:Expensier.WPF.Controls.Modals"
    xmlns:placeholders="clr-namespace:Expensier.WPF.Controls.Placeholders"
    xmlns:subscription="clr-namespace:Expensier.WPF.Controls.Subscriptions"
    xmlns:transactions="clr-namespace:Expensier.WPF.Controls.Transactions"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    mc:Ignorable="d">


    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid x:Name="MainContent">
        <Border
            Width="Auto"
            Height="Auto"
            Padding="40"
            Background="{StaticResource PrimaryColor}"
            CornerRadius="12">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!--#region Modals-->
                <Popup IsOpen="False">
                    <modals:TransactionModal x:Name="AddTransaction" DataContext="{Binding TransactionModalViewModel}" />
                </Popup>
                <Popup IsOpen="False">
                    <modals:SubscriptionModal x:Name="AddSubscription" DataContext="{Binding SubscriptionModalViewModel}" />
                </Popup>
                <!--#endregion-->

                <!--#region Expenses-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource Header3}"
                        Text="Expenses" />

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Width="128"
                            Height="42"
                            Click="AddNewTransaction"
                            Content="Add new"
                            Style="{StaticResource SquareButton}"
                            Tag="{StaticResource AddNewIcon}" />

                        <ComboBox
                            Grid.Column="2"
                            Width="128"
                            Height="42"
                            DataContext="{Binding TransactionViewModel}"
                            IsEditable="True"
                            IsReadOnly="True"
                            ItemsSource="{Binding Sort}"
                            SelectedItem="{Binding SelectedItem}">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template" Value="{StaticResource SortingDropdownTemplate}" />
                                    <Setter Property="ItemContainerStyle" Value="{StaticResource SortingDropdownItemsTemplate}" />
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>

                        <controls:SearchBar
                            x:Name="SearchBar"
                            Grid.Column="4"
                            Text="{Binding SearchBar}" />

                        <Button
                            Grid.Column="6"
                            Width="42"
                            Height="42"
                            Padding="0"
                            Background="{StaticResource MenuButtonColor}"
                            Style="{StaticResource IconButton}"
                            Tag="{StaticResource ExportIcon}" />
                    </Grid>

                    <!--  Placeholder  -->
                    <placeholders:VerticalPlaceholder
                        Title="It looks a bit empty here!"
                        Grid.Row="4"
                        Body="Add your first expense by clicking the “Add new” button above."
                        DataContext="{Binding TransactionViewModel}"
                        Icon="{StaticResource TransactionPlaceholderImage}"
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <!--  Expenses List  -->
                    <transactions:TransactionsList
                        Grid.Row="4"
                        DataContext="{Binding TransactionViewModel}"
                        Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                </Grid>
                <!--#endregion-->

                <!--#region Subscriptions-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource Header3}"
                        Text="Subscriptions" />

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Width="128"
                            Height="42"
                            Click="AddNewSubscription"
                            Content="Add new"
                            Style="{StaticResource SquareButton}"
                            Tag="{StaticResource AddNewIcon}" />

                        <ComboBox
                            Grid.Column="2"
                            Width="128"
                            Height="42"
                            DataContext="{Binding SubscriptionViewModel}"
                            IsEditable="True"
                            IsReadOnly="True"
                            ItemsSource="{Binding Sort}"
                            SelectedItem="{Binding SelectedItem}"
                            Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template" Value="{StaticResource SortingDropdownTemplate}" />
                                    <Setter Property="ItemContainerStyle" Value="{StaticResource SortingDropdownItemsTemplate}" />
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </Grid>

                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Placeholder  -->
                        <placeholders:VerticalPlaceholder
                            Title="It looks a bit empty here!"
                            Grid.Row="0"
                            Body="Add your first subscription by clicking the “Add new” button above."
                            DataContext="{Binding SubscriptionViewModel}"
                            Icon="{StaticResource SubscriptionsPlaceholderImage}"
                            Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <!--  Subscriptions  -->
                        <subscription:SubscriptionsList
                            Grid.Row="0"
                            DataContext="{Binding SubscriptionViewModel}"
                            Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />


                        <!--#region Predictions-->
                        <Grid
                            Grid.Row="2"
                            DataContext="{Binding MonthlyExpensesViewModel}"
                            Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Bar Chart  -->
                            <charts:CartesianChart
                                Grid.Row="0"
                                Height="208"
                                DrawMargin="{Binding Margin}"
                                Series="{Binding Series}"
                                XAxes="{Binding XAxis}"
                                YAxes="{Binding YAxis}" />

                            <!--  Forecasted Values  -->
                            <Grid Grid.Row="2" DataContext="{Binding PredictionsViewModel}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  KNN  -->
                                <Border
                                    Grid.Column="0"
                                    Padding="24,16"
                                    Background="{StaticResource BackgroundGradientColor}"
                                    CornerRadius="16">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource InactiveColor}"
                                            Style="{StaticResource MediumText}"
                                            Text="KNN Forecast" />


                                        <StackPanel
                                            Grid.Row="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Grid.Column="0"
                                                Margin="0,0,4,0"
                                                FontWeight="SemiBold"
                                                Style="{StaticResource BaseText}"
                                                Text="{Binding KnnResult, StringFormat='c'}" />

                                            <TextBlock
                                                Grid.Column="2"
                                                VerticalAlignment="Bottom"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource InactiveColor}"
                                                Style="{StaticResource VerySmallText}"
                                                Text="/  end of month" />

                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!--  Linear  -->
                                <Border
                                    Grid.Column="2"
                                    Padding="24,16"
                                    Background="{StaticResource BackgroundGradientColor}"
                                    CornerRadius="16">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource InactiveColor}"
                                            Style="{StaticResource MediumText}"
                                            Text="Linear Forecast" />


                                        <StackPanel
                                            Grid.Row="2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Grid.Column="0"
                                                Margin="0,0,4,0"
                                                FontWeight="SemiBold"
                                                Style="{StaticResource BaseText}"
                                                Text="{Binding LinearResult, StringFormat='c'}" />

                                            <TextBlock
                                                Grid.Column="2"
                                                VerticalAlignment="Bottom"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource InactiveColor}"
                                                Style="{StaticResource VerySmallText}"
                                                Text="/  end of month" />

                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                        <!--#endregion-->

                    </Grid>
                </Grid>
                <!--#endregion-->

            </Grid>
        </Border>
    </Grid>
</UserControl>
