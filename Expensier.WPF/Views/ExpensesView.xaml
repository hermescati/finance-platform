<UserControl
    x:Class="Expensier.WPF.Views.ExpensesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:charts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:controls="clr-namespace:Expensier.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modals="clr-namespace:Expensier.WPF.Controls.Modals"
    xmlns:placeholders="clr-namespace:Expensier.WPF.Controls.Placeholders"
    xmlns:subscription="clr-namespace:Expensier.WPF.Controls.Subscriptions"
    xmlns:transactions="clr-namespace:Expensier.WPF.Controls.Transactions"
    d:DesignHeight="852"
    d:DesignWidth="1304"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid x:Name="MainContent">
        <Border
            Width="Auto"
            Height="Auto"
            Padding="52,52,52,44"
            Background="{StaticResource PrimaryColor}"
            CornerRadius="24">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--#region Modals-->
                <Popup IsOpen="False">
                    <modals:TransactionModal x:Name="AddTransaction" DataContext="{Binding TransactionModalViewModel}" />
                </Popup>
                <Popup IsOpen="False">
                    <modals:SubscriptionModal x:Name="AddSubscription" DataContext="{Binding SubscriptionModalViewModel}" />
                </Popup>
                <!--#endregion-->

                <!--#region Expenses-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Header-->
                    <Label
                        Grid.Row="0"
                        Margin="4,0,0,0"
                        Content="Expenses"
                        Style="{StaticResource Header_20px}" />
                    <!--#endregion-->

                    <!--#region Navigation-->
                    <Grid Grid.Row="2" Margin="4,0,4,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--#region Add Transaction-->
                        <Button
                            Grid.Column="0"
                            Width="100"
                            Height="32"
                            Click="AddNewTransaction"
                            Content="add new"
                            Style="{StaticResource ModalButtonTemplate}"
                            Tag="{StaticResource AddNewIcon}" />
                        <!--#endregion-->

                        <ToggleButton
                            Grid.Column="2"
                            Width="124"
                            Height="32"
                            Content="this month"
                            Style="{StaticResource FilterButtonTemplate}">
                            <ToggleButton.Tag>
                                <x:Array Type="DrawingImage">
                                    <DrawingImage Drawing="{StaticResource Calendar}" />
                                    <DrawingImage Drawing="{StaticResource CalendarSelected}" />
                                </x:Array>
                            </ToggleButton.Tag>
                        </ToggleButton>

                        <controls:SearchBar Grid.Column="4" />

                        <Button
                            Grid.Column="6"
                            Width="32"
                            Height="32"
                            Style="{StaticResource IconButton}"
                            Tag="{StaticResource ExportIcon}" />
                    </Grid>
                    <!--#endregion-->

                    <!--#region Placeholder-->
                    <placeholders:VerticalPlaceholder
                        Title="It looks a bit empty here!"
                        Grid.Row="4"
                        Width="735"
                        Height="626"
                        Padding="222,176"
                        Body="Your expenses will appear on this page. Add your first expense by clicking the “Add new” button above."
                        DataContext="{Binding TransactionViewModel}"
                        Icon="{StaticResource TransactionPlaceholderImage}"
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <!--#endregion-->

                    <!--#region Transaction List-->
                    <transactions:TransactionsList
                        Grid.Row="4"
                        Width="735"
                        DataContext="{Binding TransactionViewModel}"
                        Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

                <!--#region Subscriptions-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Header-->
                    <Label
                        Grid.Row="0"
                        Content="Subscriptions"
                        Style="{StaticResource Header_20px}" />
                    <!--#endregion-->

                    <!--#region Navigation-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Width="100"
                            Height="32"
                            Click="AddNewSubscription"
                            Content="add new"
                            Style="{StaticResource ModalButtonTemplate}"
                            Tag="{StaticResource AddNewIcon}" />

                        <ToggleButton
                            Grid.Column="2"
                            Width="101"
                            Height="32"
                            Content="sort by"
                            Style="{StaticResource FilterButtonTemplate}">
                            <ToggleButton.Tag>
                                <x:Array Type="DrawingImage">
                                    <DrawingImage Drawing="{StaticResource Sort}" />
                                    <DrawingImage Drawing="{StaticResource SortSelected}" />
                                </x:Array>
                            </ToggleButton.Tag>
                        </ToggleButton>
                    </Grid>
                    <!--#endregion-->

                    <!--#region Placeholder-->
                    <placeholders:VerticalPlaceholder
                        Title="It looks a bit empty here!"
                        Grid.Row="4"
                        Width="381"
                        Height="340"
                        Padding="64,32"
                        Body="Your subscriptions will appear on this page. Add your first subscription by clicking the “Add new” button above."
                        DataContext="{Binding SubscriptionViewModel}"
                        Icon="{StaticResource SubscriptionsPlaceholderImage}"
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <!--#endregion-->

                    <!--#region Subscriptions-->
                    <subscription:SubscriptionsList
                        Grid.Row="4"
                        DataContext="{Binding SubscriptionViewModel}"
                        Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <!--#endregion-->


                    <!--#region Predictions-->
                    <Grid Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--#region Placeholders-->
                        <placeholders:VerticalPlaceholder
                            Title="It looks a bit empty here!"
                            Grid.Row="2"
                            Width="381"
                            Height="300"
                            Padding="64,16"
                            Body="Make sure to add some expenses to have access to the predicted expenditure for the current month."
                            DataContext="{Binding MonthlyExpensesViewModel}"
                            Icon="{StaticResource GraphPlaceholderImage}"
                            Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <!--#endregion-->

                        <charts:CartesianChart
                            Grid.Row="0"
                            Width="381"
                            Height="170"
                            DataContext="{Binding MonthlyExpensesViewModel}"
                            Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">

                            <charts:CartesianChart.DataTooltip>
                                <charts:DefaultTooltip
                                    Background="{StaticResource ForegroundColor}"
                                    BulletSize="10"
                                    CornerRadius="8"
                                    FontFamily="SF Pro Display"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource SecondaryColor}"
                                    ShowSeries="False"
                                    ShowTitle="False" />
                            </charts:CartesianChart.DataTooltip>

                            <charts:CartesianChart.Series>
                                <charts:ColumnSeries Fill="{StaticResource SecondaryGlowColor}" Values="{Binding ChartSeries}">
                                    <charts:ColumnSeries.Style>
                                        <Style TargetType="charts:ColumnSeries">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Stroke" Value="{StaticResource SecondaryColor}" />
                                                    <Setter Property="StrokeThickness" Value="1" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </charts:ColumnSeries.Style>
                                </charts:ColumnSeries>
                            </charts:CartesianChart.Series>

                            <charts:CartesianChart.AxisX>
                                <charts:Axis
                                    FontFamily="SF Pro Display"
                                    FontSize="15"
                                    FontWeight="Medium"
                                    Labels="{Binding xAxis}">
                                    <charts:Axis.Separator>
                                        <charts:Separator Step="1" StrokeThickness="0" />
                                    </charts:Axis.Separator>
                                </charts:Axis>
                            </charts:CartesianChart.AxisX>

                            <charts:CartesianChart.AxisY>
                                <charts:Axis ShowLabels="False">
                                    <charts:Axis.Separator>
                                        <charts:Separator />
                                    </charts:Axis.Separator>
                                </charts:Axis>
                            </charts:CartesianChart.AxisY>

                        </charts:CartesianChart>

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Style="{StaticResource Text_14px}">
                                <Run Text="Current month expenses to be " />
                                <Run DataContext="{Binding PredictionsViewModel}" Text="{Binding PredictionResult, StringFormat='c'}" />
                                <Run Text="using KNN." />
                            </TextBlock>

                            <TextBlock Grid.Row="2" Style="{StaticResource Text_14px}">
                                <Run Text="Current month expenses to be " />
                                <Run DataContext="{Binding PredictionsViewModel}" Text="{Binding PredictionResult, StringFormat='c'}" />
                                <Run Text="using regression." />
                            </TextBlock>

                        </Grid>
                    </Grid>
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

            </Grid>
        </Border>
    </Grid>
</UserControl>
