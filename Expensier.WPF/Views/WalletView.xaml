<UserControl
    x:Class="Expensier.WPF.Views.WalletView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cryptos="clr-namespace:Expensier.WPF.Controls.Cryptos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modals="clr-namespace:Expensier.WPF.Controls.Modals"
    d:DesignHeight="852"
    d:DesignWidth="1304"
    mc:Ignorable="d">

    <Grid x:Name="MainContent">
        <Border
            Width="Auto"
            Height="Auto"
            Padding="52"
            Background="{StaticResource PrimaryColor}"
            CornerRadius="24">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--#region Modal-->
                <Popup IsOpen="False">
                    <modals:CryptoModal x:Name="AddCrypto" DataContext="{Binding CryptoModalViewModel}" />
                </Popup>
                <!--#endregion-->

                <!--#region Watchlist-->
                <cryptos:CryptoWatchlist
                    Grid.Row="0"
                    Width="1196"
                    Height="72"
                    DataContext="{Binding CryptoWatchlistViewModel}" />
                <!--#endregion-->

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--#region Portfolio-->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--#region Performance-->
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="38" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--#region Header-->
                            <Label
                                Grid.Row="0"
                                Content="Portfolio performance"
                                Style="{StaticResource Header_20px}" />
                            <!--#endregion-->

                            <!--#region Performance Graph-->
                            <Rectangle
                                Grid.Row="2"
                                Width="558"
                                Height="180"
                                Fill="Gray" />
                            <!--#endregion-->
                        </Grid>
                        <!--#endregion-->

                        <!--#region Asset Allocation-->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="38" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--#region Header-->
                            <Label
                                Grid.Row="0"
                                Content="Asset allocation"
                                Style="{StaticResource Header_20px}" />
                            <!--#endregion-->

                            <!--#region Allocation Chart-->
                            <Rectangle
                                Grid.Row="2"
                                Width="558"
                                Height="220"
                                Fill="Gray" />
                            <!--#endregion-->
                        </Grid>
                        <!--#endregion-->

                    </Grid>
                    <!--#endregion-->

                    <!--#region Assets-->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--#region Asset List-->
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="16" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="24" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--#region Header-->
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Content="Assets"
                                Style="{StaticResource Header_20px}" />
                            <!--#endregion-->

                            <!--#region Add Asset-->
                            <Button
                                Grid.Row="2"
                                Grid.Column="0"
                                Width="100"
                                Height="32"
                                Click="AddNewCrypto"
                                Content="add new"
                                Style="{StaticResource ModalButtonTemplate}"
                                Tag="{StaticResource AddNewIcon}" />
                            <!--#endregion-->

                            <!--#region Total Value-->
                            <Label
                                Grid.Row="0"
                                Grid.Column="2"
                                Content="Total value"
                                Style="{StaticResource Header_20px}" />
                            <!--#endregion-->

                            <!--#region Asset Value-->
                            <Label
                                Grid.Row="2"
                                Grid.Column="2"
                                VerticalContentAlignment="Center"
                                Content="$##.###"
                                Style="{StaticResource Header_20px}" />
                            <!--#endregion-->

                            <!--#region Asset List-->
                            <cryptos:CryptoList
                                Grid.Row="4"
                                Grid.ColumnSpan="3"
                                Width="558"
                                Height="339"
                                DataContext="{Binding CryptoViewModel}" />
                            <!--#endregion-->
                        </Grid>
                        <!--#endregion-->

                        <!--#region Converter-->
                        <Border
                            Grid.Row="2"
                            Width="558"
                            Height="120"
                            Padding="24"
                            Background="{StaticResource PrimaryColor}"
                            BorderBrush="{StaticResource InactiveColor}"
                            BorderThickness="1"
                            CornerRadius="16">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="4" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="6" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Label
                                        Grid.Row="0"
                                        Content="Currency"
                                        Style="{StaticResource Subheader_16px}" />

                                    <TextBox
                                        Grid.Row="2"
                                        Width="227"
                                        Height="34" />

                                    <TextBlock
                                        Grid.Row="4"
                                        Style="{StaticResource Text_14px}"
                                        Text="$##,###.##" />
                                </Grid>

                                <Image
                                    Grid.Column="2"
                                    Width="16"
                                    Height="16"
                                    Source="{StaticResource AddNewIcon}" />

                                <Grid Grid.Column="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="4" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="6" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Label
                                        Grid.Row="0"
                                        Content="Crypto"
                                        Style="{StaticResource Subheader_16px}" />

                                    <TextBox
                                        Grid.Row="2"
                                        Width="227"
                                        Height="34" />
                                </Grid>

                            </Grid>
                        </Border>
                        <!--#endregion-->

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
