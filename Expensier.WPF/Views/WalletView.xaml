<UserControl
    x:Class="Expensier.WPF.Views.WalletView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:charts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:cryptos="clr-namespace:Expensier.WPF.Controls.Cryptos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modals="clr-namespace:Expensier.WPF.Controls.Modals"
    xmlns:placeholders="clr-namespace:Expensier.WPF.Controls.Placeholders"
    d:DesignHeight="852"
    d:DesignWidth="1304"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid x:Name="MainContent">
        <Border
            Width="Auto"
            Height="Auto"
            Padding="52"
            Background="{StaticResource PrimaryColor}"
            CornerRadius="24">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--#region Modal-->
                <Popup IsOpen="False">
                    <modals:CryptoModal x:Name="AddCrypto" DataContext="{Binding CryptoModalViewModel}" />
                </Popup>
                <!--#endregion-->

                <!--#region Watchlist-->

                <!--#region Placeholder-->
                <Grid Grid.Row="0" Height="72">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        DataContext="{Binding CryptoWatchlistViewModel}"
                        Style="{StaticResource Text_12px}"
                        Text="Your assets will appear on this page. Add your first asset to track by clicking the “Add new” button below."
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>
                <!--#endregion-->

                <cryptos:CryptoWatchlist
                    Grid.Row="0"
                    Width="1196"
                    Height="72"
                    DataContext="{Binding CryptoWatchlistViewModel}" />
                <!--#endregion-->

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--#region Assets-->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="27" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="16" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--#region Header-->
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Content="Assets"
                                        Style="{StaticResource Header_20px}" />
                                    <!--#endregion-->

                                    <!--#region Add Asset-->
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Width="100"
                                        Height="32"
                                        Click="AddNewCrypto"
                                        Content="add new"
                                        Style="{StaticResource ModalButtonTemplate}"
                                        Tag="{StaticResource AddNewIcon}" />
                                    <!--#endregion-->
                                </Grid>

                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="16" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--#region Total Value-->
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Content="Total value"
                                        Style="{StaticResource Header_20px}" />
                                    <!--#endregion-->

                                    <!--#region Asset Value-->
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        DataContext="{Binding PortfolioValueViewModel}"
                                        Style="{StaticResource Text_20px}"
                                        Text="{Binding TotalValue, StringFormat='${0:#,##0.###}'}" />
                                    <!--#endregion-->
                                </Grid>
                            </Grid>

                            <!--#region Placeholder-->
                            <placeholders:VerticalPlaceholder
                                Title="It looks a bit empty here!"
                                Grid.Row="4"
                                Grid.ColumnSpan="3"
                                Width="558"
                                Height="497"
                                Padding="161,40"
                                Body="Your assets will appear on this page. Add your first asset to track by clicking the “Add new” button above."
                                DataContext="{Binding CryptoViewModel}"
                                Icon="{StaticResource CryptoPlaceholderImage}"
                                Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <!--#endregion-->

                            <!--#region Asset List-->
                            <cryptos:CryptoList
                                Grid.Row="4"
                                Grid.ColumnSpan="3"
                                Width="640"
                                Height="497"
                                DataContext="{Binding CryptoViewModel}"
                                Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <!--#endregion-->
                        </Grid>
                    </Grid>
                    <!--#endregion-->

                    <!--#region Portfolio-->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--#region Performance-->
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="38" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--#region Header-->
                            <Label
                                Grid.Row="0"
                                Content="Portfolio performance"
                                Style="{StaticResource Header_20px}" />
                            <!--#endregion-->

                            <!--#region Placeholder-->
                            <placeholders:HorizontalPlaceholder
                                Title="It looks a bit empty here!"
                                Grid.Row="2"
                                Width="477"
                                Height="180"
                                Margin="4,0,0,0"
                                Body="Your asset allocation will appear on this section. Add your first asset to track by clicking the “Add new” button."
                                DataContext="{Binding PortfolioPerformanceViewModel}"
                                Icon="{StaticResource GraphPlaceholderImage}"
                                Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <!--#endregion-->

                            <!--#region Performance Graph-->
                            <charts:CartesianChart
                                Grid.Row="2"
                                Width="477"
                                Height="180"
                                DataContext="{Binding PortfolioPerformanceViewModel}"
                                Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">

                                <charts:CartesianChart.DataTooltip>
                                    <charts:DefaultTooltip
                                        Background="{StaticResource ForegroundColor}"
                                        BulletSize="10"
                                        CornerRadius="8"
                                        FontFamily="SF Pro Display"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource SecondaryColor}"
                                        ShowSeries="False"
                                        ShowTitle="False" />
                                </charts:CartesianChart.DataTooltip>

                                <charts:CartesianChart.SeriesColors>
                                    <charts:ColorsCollection>
                                        <Color>#64927C</Color>
                                    </charts:ColorsCollection>
                                </charts:CartesianChart.SeriesColors>

                                <charts:CartesianChart.Series>
                                    <charts:LineSeries
                                        LineSmoothness="1"
                                        PointForeground="{StaticResource SecondaryColor}"
                                        PointGeometrySize="5"
                                        Values="{Binding ChartSeries}" />
                                </charts:CartesianChart.Series>

                                <charts:CartesianChart.AxisX>
                                    <charts:Axis
                                        FontFamily="SF Pro Display"
                                        FontSize="15"
                                        FontWeight="Medium"
                                        Labels="{Binding xAxis}">
                                        <charts:Axis.Separator>
                                            <charts:Separator Step="1" StrokeThickness="0" />
                                        </charts:Axis.Separator>
                                    </charts:Axis>
                                </charts:CartesianChart.AxisX>

                                <charts:CartesianChart.AxisY>
                                    <charts:Axis ShowLabels="False">
                                        <charts:Axis.Separator>
                                            <charts:Separator />
                                        </charts:Axis.Separator>
                                    </charts:Axis>
                                </charts:CartesianChart.AxisY>

                            </charts:CartesianChart>
                            <!--#endregion-->
                        </Grid>
                        <!--#endregion-->

                        <!--#region Asset Allocation-->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="38" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--#region Header-->
                            <Label
                                Grid.Row="0"
                                Content="Asset allocation"
                                Style="{StaticResource Header_20px}" />
                            <!--#endregion-->

                            <!--#region Placeholder-->
                            <placeholders:HorizontalPlaceholder
                                Title="It looks a bit empty here!"
                                Grid.Row="2"
                                Width="477"
                                Height="220"
                                Body="Your asset allocation will appear on this section. Add your first asset to track by clicking the “Add new” button."
                                DataContext="{Binding AssetAllocationViewModel}"
                                Icon="{StaticResource GraphPlaceholderImage}"
                                Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <!--#endregion-->

                            <!--#region Asset Allocation Graph-->
                            <charts:PieChart
                                Grid.Row="2"
                                Width="477"
                                Height="220"
                                Margin="-24,0,0,0"
                                DataContext="{Binding AssetAllocationViewModel}"
                                InnerRadius="56"
                                LegendLocation="Right"
                                Series="{Binding Series}"
                                SeriesColors="{Binding SeriesColors, Mode=OneWay}"
                                Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">

                                <charts:PieChart.ChartLegend>
                                    <charts:DefaultLegend
                                        Width="164"
                                        Height="220"
                                        Margin="48,0,0,0"
                                        BulletSize="32"
                                        FontFamily="SF Pro Display"
                                        FontSize="15"
                                        FontWeight="Medium"
                                        Foreground="{StaticResource InactiveColor}" />
                                </charts:PieChart.ChartLegend>

                                <charts:PieChart.DataTooltip>
                                    <charts:DefaultTooltip
                                        Background="{StaticResource ForegroundColor}"
                                        CornerRadius="8"
                                        FontFamily="SF Pro Display"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource SecondaryColor}"
                                        SelectionMode="OnlySender"
                                        ShowSeries="False"
                                        ShowTitle="False" />
                                </charts:PieChart.DataTooltip>

                            </charts:PieChart>
                            <!--#endregion-->
                        </Grid>
                        <!--#endregion-->

                    </Grid>
                    <!--#endregion-->
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
