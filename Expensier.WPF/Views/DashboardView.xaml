<UserControl
    x:Class="Expensier.WPF.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:charts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:cryptos="clr-namespace:Expensier.WPF.Controls.Cryptos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modals="clr-namespace:Expensier.WPF.Controls.Modals"
    xmlns:placeholders="clr-namespace:Expensier.WPF.Controls.Placeholders"
    xmlns:subscriptions="clr-namespace:Expensier.WPF.Controls.Subscriptions"
    xmlns:transactions="clr-namespace:Expensier.WPF.Controls.Transactions"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Border
        Width="Auto"
        Height="Auto"
        Padding="40"
        Background="{StaticResource PrimaryColor}"
        CornerRadius="12">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="80" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!--#region Spending Summary-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource Header3}"
                            Text="Spending summary" />

                        <ComboBox
                            Grid.Column="2"
                            DataContext="{Binding SpendingSummaryViewModel}"
                            ItemsSource="{Binding Frequency}"
                            SelectedItem="{Binding SelectedItem}"
                            Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template" Value="{StaticResource ComboBoxTemplate}" />
                                    <Setter Property="ItemContainerStyle" Value="{StaticResource DropDownItemsTemplate}" />
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </Grid>

                    <!--  Placeholder  -->
                    <placeholders:HorizontalPlaceholder
                        Title="It looks a bit empty here!"
                        Grid.Row="2"
                        Width="560"
                        Height="240"
                        Body="Add a new expense to see your spending summary chart!"
                        DataContext="{Binding SpendingSummaryViewModel}"
                        Icon="{StaticResource GraphPlaceholderImage}"
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <!--  Line Chart  -->
                    <charts:CartesianChart
                        Grid.Row="2"
                        Width="574"
                        Height="224"
                        DataContext="{Binding SpendingSummaryViewModel}"
                        Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <charts:CartesianChart.DataTooltip>
                            <charts:DefaultTooltip
                                Background="{StaticResource ForegroundColor}"
                                BulletSize="10"
                                CornerRadius="8"
                                FontFamily="SF Pro Display"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="{StaticResource SecondaryColor}"
                                ShowSeries="False"
                                ShowTitle="False" />
                        </charts:CartesianChart.DataTooltip>

                        <charts:CartesianChart.SeriesColors>
                            <charts:ColorsCollection>
                                <Color>#64927C</Color>
                            </charts:ColorsCollection>
                        </charts:CartesianChart.SeriesColors>

                        <charts:CartesianChart.Series>
                            <charts:LineSeries
                                LineSmoothness="1"
                                PointForeground="{StaticResource SecondaryColor}"
                                PointGeometrySize="5"
                                Values="{Binding ChartSeries}" />
                        </charts:CartesianChart.Series>

                        <charts:CartesianChart.AxisX>
                            <charts:Axis
                                FontFamily="SF Pro Display"
                                FontSize="15"
                                FontWeight="Medium"
                                Labels="{Binding xAxis}">
                                <charts:Axis.Separator>
                                    <charts:Separator Step="1" StrokeThickness="0" />
                                </charts:Axis.Separator>
                            </charts:Axis>
                        </charts:CartesianChart.AxisX>

                        <charts:CartesianChart.AxisY>
                            <charts:Axis ShowLabels="False">
                                <charts:Axis.Separator>
                                    <charts:Separator />
                                </charts:Axis.Separator>
                            </charts:Axis>
                        </charts:CartesianChart.AxisY>

                    </charts:CartesianChart>

                </Grid>
                <!--#endregion-->

                <!--#region Expenditure-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource Header3}"
                            Text="Expenditure" />

                        <ComboBox
                            Grid.Column="2"
                            DataContext="{Binding ExpenditureAllocationViewModel}"
                            ItemsSource="{Binding Frequency}"
                            SelectedItem="{Binding SelectedItem}"
                            Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template" Value="{StaticResource ComboBoxTemplate}" />
                                    <Setter Property="ItemContainerStyle" Value="{StaticResource DropDownItemsTemplate}" />
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </Grid>

                    <!--  Placeholder  -->
                    <placeholders:HorizontalPlaceholder
                        Title="It looks a bit empty here!"
                        Grid.Row="2"
                        Width="560"
                        Height="240"
                        Body="Add a new expense to see your expenditure chart!"
                        DataContext="{Binding SpendingSummaryViewModel}"
                        Icon="{StaticResource GraphPlaceholderImage}"
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <!--  Pie Chart  -->
                    <charts:PieChart
                        Grid.Row="2"
                        Width="500"
                        Height="224"
                        Margin="-100,0,0,0"
                        DataContext="{Binding ExpenditureAllocationViewModel}"
                        InnerRadius="56"
                        LegendLocation="Right"
                        Series="{Binding Series}"
                        SeriesColors="{Binding SeriesColors, Mode=OneWay}"
                        Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <charts:PieChart.ChartLegend>
                            <charts:DefaultLegend
                                Height="220"
                                Margin="48,0,0,0"
                                BulletSize="32"
                                FontFamily="SF Pro Display"
                                FontSize="15"
                                FontWeight="Medium"
                                Foreground="{StaticResource InactiveColor}" />
                        </charts:PieChart.ChartLegend>

                        <charts:PieChart.DataTooltip>
                            <charts:DefaultTooltip
                                Background="{StaticResource ForegroundColor}"
                                CornerRadius="8"
                                FontFamily="SF Pro Display"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="{StaticResource SecondaryColor}"
                                SelectionMode="OnlySender"
                                ShowSeries="False"
                                ShowTitle="False" />
                        </charts:PieChart.DataTooltip>

                    </charts:PieChart>

                </Grid>
                <!--#endregion-->

            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <!--#region Expenses-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource Header3}"
                        Text="Recent expenses" />

                    <!--  Placeholder  -->
                    <placeholders:VerticalPlaceholder
                        Title="It looks a bit empty here!"
                        Grid.Row="2"
                        Width="360"
                        Height="320"
                        Body="Add a new expense to see your latest transactions!"
                        DataContext="{Binding RecentExpensesViewModel}"
                        Icon="{StaticResource TransactionPlaceholderImage}"
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    <!--  Top Expenses  -->
                    <transactions:RecentExpenses
                        Grid.Row="2"
                        DataContext="{Binding RecentExpensesViewModel}"
                        Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                </Grid>
                <!--#endregion-->

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Subscriptions-->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="24" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource Header3}"
                            Text="Subscriptions" />

                        <!--  Placeholder  -->
                        <Grid Grid.Row="2">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                DataContext="{Binding TopSubscriptionsViewModel}"
                                Foreground="{StaticResource InactiveColor}"
                                Style="{StaticResource SmallText}"
                                Text="Your subscriptions will appear on this section. Head over to the Expenses tab and add a new subscription."
                                Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </Grid>

                        <!--  Top Subscriptions  -->
                        <subscriptions:TopSubscriptions
                            Grid.Row="2"
                            DataContext="{Binding TopSubscriptionsViewModel}"
                            Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                    </Grid>
                    <!--#endregion-->

                    <!--#region Watchlist-->
                    <Border
                        Grid.Row="2"
                        Padding="40,24"
                        Background="{StaticResource BackgroundGradientColor}"
                        CornerRadius="16">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock
                                    Grid.Row="1"
                                    Style="{StaticResource Header3}"
                                    Text="Watchlist" />

                                <TextBlock
                                    Grid.Row="3"
                                    Width="144"
                                    Margin="0,8,0,16"
                                    Foreground="{StaticResource InactiveColor}"
                                    Style="{StaticResource MediumText}"
                                    Text="Keep track of your favorite cryptos."
                                    TextWrapping="Wrap" />

                                <Button
                                    Grid.Row="5"
                                    Width="120"
                                    Height="40"
                                    Padding="0"
                                    HorizontalAlignment="Left"
                                    Command="{Binding NavigateToWatchlist}"
                                    Content="See all"
                                    Style="{StaticResource BaseButton}"
                                    Visibility="{Binding TopPerformingCryptosViewModel.ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                <Button
                                    Grid.Row="5"
                                    Width="120"
                                    Height="40"
                                    Padding="0"
                                    HorizontalAlignment="Left"
                                    Command="{Binding NavigateToWatchlist}"
                                    Content="Add Assets"
                                    Style="{StaticResource BaseButton}"
                                    Visibility="{Binding TopPerformingCryptosViewModel.ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>

                            <!--  Placeholder  -->
                            <placeholders:HorizontalPlaceholder
                                Title="It looks a bit empty here!"
                                Grid.Column="2"
                                Width="480"
                                Height="192"
                                Body="Add a new asset to see your cryptocurrency watchlist!"
                                DataContext="{Binding TopPerformingCryptosViewModel}"
                                Icon="{StaticResource CryptoPlaceholderImage}"
                                Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <!--  Crypto Assets  -->
                            <cryptos:TopCryptos
                                Grid.Column="2"
                                DataContext="{Binding TopPerformingCryptosViewModel}"
                                Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

                        </Grid>
                    </Border>
                    <!--#endregion-->

                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
