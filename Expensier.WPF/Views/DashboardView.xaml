<UserControl
    x:Class="Expensier.WPF.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:charts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:cryptos="clr-namespace:Expensier.WPF.Controls.Cryptos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expensier.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modals="clr-namespace:Expensier.WPF.Controls.Modals"
    xmlns:placeholders="clr-namespace:Expensier.WPF.Controls.Placeholders"
    xmlns:subscriptions="clr-namespace:Expensier.WPF.Controls.Subscriptions"
    xmlns:transactions="clr-namespace:Expensier.WPF.Controls.Transactions"
    d:DesignHeight="852"
    d:DesignWidth="1304"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Border
        Width="Auto"
        Height="Auto"
        Padding="52"
        Background="{StaticResource PrimaryColor}"
        CornerRadius="24">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="80" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="122" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--#region Spending Summary-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Header-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            Content="Spending summary"
                            Style="{StaticResource Header_20px}" />

                        <ComboBox
                            Grid.Column="2"
                            Width="137"
                            Height="32"
                            DataContext="{Binding SpendingSummaryViewModel}"
                            ItemsSource="{Binding Frequency}"
                            SelectedItem="{Binding SelectedItem}">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template" Value="{StaticResource ComboBoxTemplate}" />
                                    <Setter Property="ItemContainerStyle" Value="{StaticResource DropDownItemsTemplate}" />
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </Grid>
                    <!--#endregion-->

                    <!--#region Placeholder-->
                    <placeholders:HorizontalPlaceholder
                        Title="It looks a bit empty here!"
                        Grid.Row="2"
                        Width="574"
                        Height="224"
                        Body="Your spending summary will appear on this section. Head over to the Transactions tab and click the “Add new” button to create a new transaction."
                        DataContext="{Binding SpendingSummaryViewModel}"
                        Icon="{StaticResource GraphPlaceholderImage}"
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <!--#endregion-->

                    <!--#region Summary Graph-->
                    <charts:CartesianChart
                        Grid.Row="2"
                        Width="574"
                        Height="224"
                        DataContext="{Binding SpendingSummaryViewModel}"
                        Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <charts:CartesianChart.DataTooltip>
                            <charts:DefaultTooltip
                                Background="{StaticResource ForegroundColor}"
                                BulletSize="10"
                                CornerRadius="8"
                                FontFamily="SF Pro Display"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="{StaticResource SecondaryColor}"
                                ShowSeries="False"
                                ShowTitle="False" />
                        </charts:CartesianChart.DataTooltip>

                        <charts:CartesianChart.SeriesColors>
                            <charts:ColorsCollection>
                                <Color>#64927C</Color>
                            </charts:ColorsCollection>
                        </charts:CartesianChart.SeriesColors>

                        <charts:CartesianChart.Series>
                            <charts:LineSeries
                                LineSmoothness="1"
                                PointForeground="{StaticResource SecondaryColor}"
                                PointGeometrySize="5"
                                Values="{Binding ChartSeries}" />
                        </charts:CartesianChart.Series>

                        <charts:CartesianChart.AxisX>
                            <charts:Axis
                                FontFamily="SF Pro Display"
                                FontSize="15"
                                FontWeight="Medium"
                                Labels="{Binding xAxis}">
                                <charts:Axis.Separator>
                                    <charts:Separator Step="1" StrokeThickness="0" />
                                </charts:Axis.Separator>
                            </charts:Axis>
                        </charts:CartesianChart.AxisX>

                        <charts:CartesianChart.AxisY>
                            <charts:Axis ShowLabels="False">
                                <charts:Axis.Separator>
                                    <charts:Separator />
                                </charts:Axis.Separator>
                            </charts:Axis>
                        </charts:CartesianChart.AxisY>

                    </charts:CartesianChart>
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

                <!--#region Expenditure-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Header-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            Content="Expenditure"
                            Style="{StaticResource Header_20px}" />

                        <ComboBox
                            Grid.Column="2"
                            Width="137"
                            Height="32"
                            DataContext="{Binding ExpenditureAllocationViewModel}"
                            ItemsSource="{Binding Frequency}"
                            SelectedItem="{Binding SelectedItem}">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template" Value="{StaticResource ComboBoxTemplate}" />
                                    <Setter Property="ItemContainerStyle" Value="{StaticResource DropDownItemsTemplate}" />
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </Grid>
                    <!--#endregion-->

                    <!--#region Placeholder-->
                    <placeholders:HorizontalPlaceholder
                        Title="It looks a bit empty here!"
                        Grid.Row="2"
                        Width="500"
                        Height="224"
                        Body="Your expenditures will appear on this section. Head over to the Transactions tab and click the “Add new” button to create a new transaction."
                        DataContext="{Binding SpendingSummaryViewModel}"
                        Icon="{StaticResource GraphPlaceholderImage}"
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <!--#endregion-->

                    <!--#region Expenditure Graph-->
                    <charts:PieChart
                        Grid.Row="2"
                        Width="500"
                        Height="224"
                        DataContext="{Binding ExpenditureAllocationViewModel}"
                        InnerRadius="56"
                        LegendLocation="Left"
                        Series="{Binding Series}"
                        SeriesColors="{Binding SeriesColors, Mode=OneWay}"
                        Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <charts:PieChart.ChartLegend>
                            <charts:DefaultLegend
                                Width="164"
                                Height="220"
                                BulletSize="32"
                                FontFamily="SF Pro Display"
                                FontSize="15"
                                FontWeight="Medium"
                                Foreground="{StaticResource InactiveColor}" />
                        </charts:PieChart.ChartLegend>

                        <charts:PieChart.DataTooltip>
                            <charts:DefaultTooltip
                                Background="{StaticResource ForegroundColor}"
                                CornerRadius="8"
                                FontFamily="SF Pro Display"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="{StaticResource SecondaryColor}"
                                SelectionMode="OnlySender"
                                ShowSeries="False"
                                ShowTitle="False" />
                        </charts:PieChart.DataTooltip>

                    </charts:PieChart>
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--#region Expenses-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Header-->
                    <Label
                        Grid.Row="0"
                        Content="Recent expenses"
                        Style="{StaticResource Header_20px}" />
                    <!--#endregion-->

                    <!--#region Placeholder-->
                    <placeholders:VerticalPlaceholder
                        Title="It looks a bit empty here!"
                        Grid.Row="2"
                        Width="342"
                        Height="308"
                        Padding="56,16"
                        Body="Your recent expenses will appear on this section. Head over to the Transactions tab and click the “Add new” button to create a new transaction."
                        DataContext="{Binding RecentExpensesViewModel}"
                        Icon="{StaticResource TransactionPlaceholderImage}"
                        Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <!--#endregion-->

                    <!--#region Top Expenses-->
                    <transactions:RecentExpenses
                        Grid.Row="2"
                        Width="342"
                        Height="308"
                        DataContext="{Binding RecentExpensesViewModel}"
                        Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <!--#endregion-->

                </Grid>
                <!--#endregion-->

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="64" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--#region Subscriptions-->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--#region Header-->
                        <Label
                            Grid.Row="0"
                            Content="Subscriptions"
                            Style="{StaticResource Header_20px}" />
                        <!--#endregion-->

                        <!--#region Placeholder-->
                        <Grid Grid.Row="2" Height="40">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                DataContext="{Binding TopSubscriptionsViewModel}"
                                Style="{StaticResource Text_12px}"
                                Text="Your subscriptions will appear on this section. Head over to the Transactions tab and add a new subscription."
                                Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </Grid>
                        <!--#endregion-->

                        <!--#region Top Subscriptions-->
                        <subscriptions:TopSubscriptions
                            Grid.Row="2"
                            Width="774"
                            Height="42"
                            DataContext="{Binding TopSubscriptionsViewModel}"
                            Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <!--#endregion-->

                    </Grid>
                    <!--#endregion-->


                    <!--#region Watchlist-->
                    <Border
                        Grid.Row="2"
                        Width="774"
                        Height="204"
                        Padding="48,22"
                        Background="{StaticResource BackgroundGradientColor}"
                        CornerRadius="20">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--#region Header-->
                            <StackPanel
                                Grid.Column="0"
                                Width="110"
                                Margin="4,0,0,0">
                                <Label
                                    Margin="0,20,0,16"
                                    Content="Watchlist"
                                    Style="{StaticResource Header_20px}" />
                                <TextBlock
                                    Margin="0,0,0,16"
                                    Style="{StaticResource Text_14px}"
                                    Text="Keep track of your favorite cryptos"
                                    TextWrapping="Wrap" />
                                <Button
                                    Width="110"
                                    Height="28"
                                    Command="{Binding NavigateToWatchlist}"
                                    Content="See all"
                                    Style="{StaticResource SmallButton}"
                                    Visibility="{Binding TopPerformingCryptosViewModel.ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <Button
                                    Width="110"
                                    Height="28"
                                    Command="{Binding NavigateToWatchlist}"
                                    Content="Add Assets"
                                    Style="{StaticResource SmallButton}"
                                    Visibility="{Binding TopPerformingCryptosViewModel.ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                            <!--#endregion-->

                            <!--#region Placeholder-->
                            <placeholders:HorizontalPlaceholder
                                Title="It looks a bit empty here!"
                                Grid.Column="2"
                                Width="512"
                                Height="160"
                                Body="The watchlist for your cryptocurrency assets will appear on this section. Head over to the Portfolio tab and click the “Add new” button to track an asset."
                                DataContext="{Binding TopPerformingCryptosViewModel}"
                                Icon="{StaticResource CryptoPlaceholderImage}"
                                Visibility="{Binding ListEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <!--#endregion-->

                            <!--#region Crypto Cards-->
                            <cryptos:TopCryptos
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                DataContext="{Binding TopPerformingCryptosViewModel}"
                                Visibility="{Binding ListNotEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <!--#endregion-->

                        </Grid>

                    </Border>
                    <!--#endregion-->

                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
